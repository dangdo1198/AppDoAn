<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FormCapNhatTinTuyenDung"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp">
            <TextView
                android:textAlignment="center"
                android:background="@drawable/botronds"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="10"
                android:textSize="22sp"
                android:id="@+id/id_txt"
                android:layout_width="100dp"
                android:layout_height="40dp">

            </TextView>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_below="@id/id_txt"
                android:id="@+id/tendoanhnghiep_edt"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="45dp">

            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_below="@id/tendoanhnghiep_edt"
                android:id="@+id/tieude_edt"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="45dp">

            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_below="@id/tieude_edt"
                android:id="@+id/noidungchinh_edt"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="200dp">

            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_below="@id/noidungchinh_edt"
                android:id="@+id/sodienthoai_edt"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="45dp">

            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_below="@id/sodienthoai_edt"
                android:id="@+id/email_edt"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="45dp">

            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_below="@id/email_edt"
                android:id="@+id/website_edt"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="45dp">

            </EditText>
            <Button
                android:text="Save"
                android:layout_marginTop="15dp"
                android:layout_below="@id/website_edt"
                android:id="@+id/save_btn"
                android:layout_marginStart="10dp"
                android:layout_width="390dp"
                android:layout_height="45dp">

            </Button>
        </RelativeLayout>

    </ScrollView>




</LinearLayout>