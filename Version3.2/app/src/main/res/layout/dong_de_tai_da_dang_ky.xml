<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lineardetaidadangky">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/id_txt"
            android:textSize="25sp"
            android:textColor="@color/mdtp_done_text_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"></TextView>
        <TextView
            android:id="@+id/tendetai_txt"
            android:textSize="22dp"
            android:textStyle="italic"
            android:textColor="#369F3A"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:id="@+id/linhvuc_txt"
            android:textColor="#C18C3D"
            android:layout_marginTop="90dp"
            android:layout_marginStart="60dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            ></TextView>
        <TextView
            android:id="@+id/thoigian_txt"
            android:layout_marginTop="130dp"
            android:layout_marginStart="130dp"
            android:textSize="18dp"
            android:textColor="#3547A8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            ></TextView>
        <TextView
            android:id="@+id/kinhphi_txt"
            android:textColor="#BFAD0D"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="310dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            ></TextView>
        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Kinh phí:"
            android:textStyle="italic"
            android:textColor="@color/mdtp_done_text_color_dark_disabled"
            android:layout_marginStart="250dp">

        </androidx.constraintlayout.utils.widget.MotionLabel>
        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Lĩnh vực:"
            android:textStyle="italic"
            android:textColor="@color/mdtp_done_text_color_dark_disabled"
            android:layout_marginTop="90dp">

        </androidx.constraintlayout.utils.widget.MotionLabel>
        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Thời gian dự kiến:"
            android:textStyle="italic"
            android:textColor="@color/mdtp_done_text_color_dark_disabled"
           android:layout_marginTop="128dp">

        </androidx.constraintlayout.utils.widget.MotionLabel>
    </RelativeLayout>
   <RelativeLayout
       android:background="#86E2ED"
       android:layout_width="match_parent"
       android:layout_height="7dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp">
       <ImageView
           android:layout_width="260dp"
           android:layout_height="match_parent"
           android:background="#1E8C80"></ImageView>
   </RelativeLayout>


</LinearLayout>