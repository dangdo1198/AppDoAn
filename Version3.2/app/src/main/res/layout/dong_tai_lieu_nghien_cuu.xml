<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainLayout">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
           >
            <TextView
                android:id="@+id/id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>
            <TextView
                android:id="@+id/tentailieu_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Tên tài liệu"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/id_txt"
                app:layout_constraintTop_toTopOf="@+id/id_txt">

            </TextView>
            <TextView
                android:id="@+id/tacgia_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_light"
               app:layout_constraintStart_toStartOf="@+id/tentailieu_txt"
                app:layout_constraintTop_toBottomOf="@+id/tentailieu_txt">

            </TextView>
            <TextView
                android:id="@+id/linhvuc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lĩnh Vực"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/tacgia_txt"
                app:layout_constraintTop_toBottomOf="@+id/tacgia_txt">

            </TextView>
            <TextView
                android:id="@+id/thoigian_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/8/2021"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <Button
                android:id="@+id/btn_xemthem"
                android:layout_marginTop="20dp"

                android:layout_width="196dp"
                android:layout_height="25dp"
                android:background="@android:color/holo_orange_light"
                android:text="Xem chi tiết"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="italic"


                app:layout_constraintStart_toStartOf="@+id/linhvuc_txt"
                app:layout_constraintTop_toBottomOf="@+id/linhvuc_txt">

            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>