<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:background="#E1EDEF"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp">
        <TextView
            android:textAlignment="center"
            android:background="#9FECA2"
            android:textColor="#F4430B"
            android:textStyle="italic|bold"
            android:text="10"
            android:textSize="20sp"
            android:id="@+id/id_txt"
            android:layout_width="50dp"
            android:layout_height="30dp">

        </TextView>
        <TextView
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:text="Tổ chức gặp mặt"
            android:textSize="22sp"
            android:id="@+id/tenchuongtrinh_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textColor="#674108"
            android:layout_below="@id/tenchuongtrinh_txt"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginStart="120dp"
            android:text="09-09-2021"
            android:textSize="20sp"
            android:id="@+id/thoigiandukien_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_below="@id/thoigiandukien_txt"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:layout_marginStart="50dp"
            android:textColor="#F44336"
            android:text="Thời gian này chúng tôi khá bận nhiều công việc"
            android:textSize="20sp"
            android:id="@+id/phanhoi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#043257"
            android:text="Thời gian dự kiến:"
            android:textStyle="italic"
            android:layout_marginTop="13dp"
            android:layout_below="@id/tenchuongtrinh_txt">

        </androidx.constraintlayout.utils.widget.MotionLabel>
        <androidx.constraintlayout.utils.widget.MotionLabel
            android:textColor="#2E0871"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KMA:"
            android:textStyle="italic"
            android:layout_marginTop="13dp"
            android:layout_below="@id/thoigiandukien_txt">

        </androidx.constraintlayout.utils.widget.MotionLabel>

    </RelativeLayout>

</LinearLayout>