<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#473706">
    <RelativeLayout
        android:background="#EFE9B6"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginTop="5dp"
          android:textColor="@color/mdtp_numbers_text_color"
            android:textAlignment="center"
           android:textStyle="bold"
            android:text="10"
            android:textSize="20sp"
            android:id="@+id/id_txt"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textColor="@color/mdtp_red"
            android:textStyle="italic|bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/id_txt"
            android:text="Tuyển dụng thực tập sinh lập trình"
            android:id="@+id/tieude_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <Button
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:background="@drawable/botronchitiet"
            android:layout_marginStart="90dp"
            android:text="Chi tiết"
            android:id="@+id/chitiet_btn"
            android:layout_width="100dp"
            android:layout_height="30dp">

        </Button>
        <Button
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:background="@drawable/botroncapnhat"
            android:layout_marginStart="200dp"
            android:text="Cập nhật"
            android:id="@+id/capnhat_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

        </Button>
        <Button
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:background="@drawable/botronxoa"
            android:layout_marginStart="295dp"
            android:text="Xóa"
            android:id="@+id/xoa_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

        </Button>

    </RelativeLayout>

</LinearLayout>