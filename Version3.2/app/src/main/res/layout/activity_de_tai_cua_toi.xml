<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DeTaiCuaToi"
    android:padding="10dp">
    <ImageView
        android:src="@drawable/detaicuatoi"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        android:layout_width="200dp"
        android:layout_height="200dp"></ImageView>
    <ImageView
        android:src="@drawable/danhsachicon"
        android:layout_marginTop="230dp"
        android:layout_width="70dp"
        android:layout_height="70dp"></ImageView>
    <ImageView
        android:src="@drawable/duyeticon"
        android:layout_marginTop="320dp"
        android:layout_width="70dp"
        android:layout_height="70dp"></ImageView>
    <ImageView
        android:src="@drawable/huyicon"
        android:layout_marginTop="410dp"
        android:layout_width="70dp"
        android:layout_height="70dp"></ImageView>
    <Button
        android:id="@+id/dsdetai_btn"
        android:textSize="18sp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="80dp"
       android:text="Đề tài đã đăng ký"
        android:textStyle="bold"
        android:background="@drawable/botronds"
        android:layout_width="310dp"
        android:layout_height="70dp"></Button>
    <Button
        android:id="@+id/detaiduyet_btn"
        android:layout_marginStart="80dp"
        android:textSize="18sp"
        android:text="Đề tài được duyệt"
        android:textStyle="bold"
        android:background="@drawable/botronduyet"

        android:layout_width="310dp"
        android:layout_marginTop="320dp"
        android:layout_height="70dp"></Button>
    <Button

        android:id="@+id/detaihuy_btn"
        android:textSize="18sp"
        android:text="Đề tài bị hủy"
        android:textStyle="bold"
        android:background="@drawable/botron_button"
        android:layout_marginStart="80dp"
        android:layout_width="310dp"
        android:layout_marginTop="410dp"
        android:layout_height="70dp"></Button>
    <Button
        android:background="@drawable/botrondangkydetaimoi"
        android:textSize="18sp"
        android:id="@+id/dangkydetaimoi_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Đăng ký đề tài mới"
        android:layout_marginTop="500dp"></Button>

</RelativeLayout>