<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DangTinTuyenDung"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÁC TIN ĐÃ ĐĂNG"
        android:textAlignment="center"
        android:textColor="#DD8D17"
        android:textStyle="bold"
        android:textSize="20sp">

    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:background="#E6F4F3"
            android:id="@+id/recyclerView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:layout_marginTop="207dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#5E3B08"></ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TẠO TIN TUYỂN DỤNG"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0C6BB6">

    </TextView>
    <ScrollView

        android:id="@+id/scrollView"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp">
            <EditText
                android:hint="Tên doanh nghiệp ..."
                android:layout_marginTop="10dp"
                android:id="@+id/tendoanhnghiep_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Người đăng bài ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/tendoanhnghiep_edt"
                android:id="@+id/nguoidang_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Chức vụ ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/nguoidang_edt"
                android:id="@+id/chucvu_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Số điện thoại ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/chucvu_edt"
                android:id="@+id/sodienthoai_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Email ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/sodienthoai_edt"
                android:id="@+id/email_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Website ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/email_edt"
                android:id="@+id/website_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Tiêu đề ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/website_edt"
                android:id="@+id/tieude_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText

                android:hint="Nhập nội dung bài tin tuyển dụng ..."
                android:layout_marginTop="10dp"
                android:layout_below="@id/tieude_edt"
                android:id="@+id/noidung_edt"
                android:layout_width="match_parent"
                android:layout_height="100dp"></EditText>

            <Button
                android:background="#C7DCED"
                android:layout_marginTop="10dp"
                android:layout_below="@id/noidung_edt"
                android:id="@+id/dangbai_btn"
                android:layout_marginStart="20dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="ĐĂNG BÀI"
                android:textStyle="bold"
                android:textSize="18sp">

            </Button>
        </RelativeLayout>
    </ScrollView>

    


</LinearLayout>